<p style="color: green"><%= notice %></p>

<h1 class="my-5 text-center"><%= @post.title %></h1>
<div class="text-center">
              <%= image_tag @post.image, class:"card-img-top w-25" %>
        <div class="mb-5 text-center my-4">
            <%= @post.description %>
        </div>
</div>
<div>
  <%= render 'reactions/options' %>
</div>
<div>
  <%= render 'reactions/counters' %>
</div>

<h2 class="my-5 text-center">Comentarios</h2>
<div class="container">
  <% @comments.each do |comment| %>
    <p>Usuario:       <%= comment.user.email %></p>
    <div>Comentario:  <%= comment.content %></div>
    <br>
  <% end %>
</div>


<div class="d-flex gap-2 my-5">
  <%= link_to "Volver a Posts", posts_path, class:"btn btn-dark" %>
  <% if user_signed_in? %> 
    <%= link_to "Nuevo Comentario", new_comment_path(@post), class:"btn btn-dark" %>
    <% if current_user.id == @post.user_id %>
      <%= link_to "Editar este Post", edit_post_path(@post), class:"btn btn-dark" %>
      <%= button_to "Eliminar", @post, class:"btn btn-danger btn-sm", method: :delete %>
    <% end %>
  <% end %>
  </div>
